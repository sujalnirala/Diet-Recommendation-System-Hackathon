generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Food {
  id            Int      @id @default(autoincrement())
  name          String
  calories      Float
  protein       Float
  fat           Float
  carbs         Float
  vitamins      String
  minerals      String
  havePeanuts   Boolean
  haveSesame    Boolean
  haveGluten    Boolean
  isVeg         Boolean
  isNonVeg      Boolean
  forWeightLoss Boolean
  forWeightGain Boolean
  mealId        Int
  meal          Meal @relation(fields: [mealId], references: [id])
}

model Meal {
  id         Int       @id @default(autoincrement())
  name       String
  foods      Food[]    // List of foods directly associated with the meal
}

model User {
  id                 Int        @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String     @unique
  password           String
  role               String
  age                Int?
  gender             String?
  weight             Float?
  height             Float?
  dietaryPreferences String?
  allergies          String?
  healthGoals        String?
}

